@model DojoSurveyValid.Models.Survey
@{
    ViewData["Title"] = "Results";
}

<div class="text-center flex-column mx-auto w-50">
    <div class="d-flex justify-content-between">
        <p>Your Name:</p>
        <p>@Model.Name</p>
    </div>
    <div class="d-flex justify-content-between">
        <p>Dojo Location:</p>
        <p>@Model.Location</p>
    </div>
    <div class="d-flex justify-content-between">
        <p>Favorite Language:</p>
        <p>@Model.Language</p>
    </div>
    <div class="d-flex justify-content-between">
        <p>Comments:</p>
        <p id="comment">@Model.Comments</p>
    </div>
</div>