@{
    ViewData["Title"] = "Dojo Survey";
}

@model DojoSurveyValid.Models.Survey
<div class="text-center">
        <form asp-action="Submission" asp-controller="Home" method="post">
            <div class="form-group">
                <span asp-validation-for="Name" class="text-danger"></span>
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
            </div>
            <div class="form-group">
                <span asp-validation-for="Location" class="text-danger"></span>
                <label asp-for="Location"></label>
                <select asp-for="Location" class="form-control">
                    <option value="">Select a Location</option>
                    <option value="Bellevue">Bellevue</option>
                    <option value="Boise">Boise</option>
                    <option value="Chicago">Chicago</option>
                    <option value="Los Angeles">Los Angeles</option>
                    <option value="Silicon Valley">Silicon Valley</option>
                    <option value="Online">Online</option>
                </select>
            </div>
            <div class="form-group">
                <span asp-validation-for="Language" class="text-danger"></span>
                <label asp-for="Language"></label>
                <select asp-for="Language" class="form-control">
                    <option value="">Select a Language</option>
                    <option value="Javascript">Javascript</option>
                    <option value="Java">Java</option>
                    <option value="Python">Python</option>
                    <option value="C#">C#</option>
                </select>
            </div>
            <div class="form-group">
                <span asp-validation-for="Comments" class="text-danger"></span>
                <label asp-for="Comments"></label>
                <textarea asp-for="Comments" cols="30" rows="10" class="form-control"></textarea>
            </div>
            <input type="submit" value="Submit" class="btn btn-primary">
        </form>
    </div>